{
    "manifest_version": 3,
    "name": "YouTube UI Customizer",
    "version": "1.6.0",
    "description": "Customize some aspects of YouTube display.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {}
    },
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content-core.js", "content-texts.js", "content-player.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content-utilities.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
